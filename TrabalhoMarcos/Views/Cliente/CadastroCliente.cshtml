@model TrabalhoMarcos.Models.Cliente

@{
    ViewData["Title"] = "..::Cadastro Cliente::..";
}

@* Codigo formulario cadastro cliente *@
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1>Cadastro Cliente</h1>
        </div>
    </div>
    <form method="post">
        @* LINHA NOME, CPF,RF E DN *@
        <div class="row">
            <div class="col">
                <label asp-for="Nome" class="col-sm-2 col-form-label fw-bold">
                    Nome
                </label>
                <input asp-for="Nome" type="text" class="form-control" id="Nome" />
            </div>
            <div class="col-lg-3">
                <label asp-for="CPF" class="col-form-label fw-bold">
                    CPF
                </label>
                <input asp-for="CPF" type="text" class="form-control" id="CPF">
            </div>
            <div class="col-lg-2">
                <label asp-for="RG" class="col-form-label fw-bold">
                    RG
                </label>
                <input asp-for="RG" type="text" class="form-control" id="RG">
            </div>
            <div class="col-lg-2">
                <label asp-for="Usuario" class="col-form-label fw-bold text-nowrap">
                    Usuario
                </label>
                <input asp-for="Usuario" type="text" class="form-control" id="Usuario">
            </div>
            <div class="col-lg-2">
                <label asp-for="Senha" class="col-form-label fw-bold text-nowrap">
                    Senha
                </label>
                <input asp-for="Senha" type="text" class="form-control" id="Senha">
            </div>
        </div>
   
    @* LINHA ENDEREÇO *@
    <div class="row">
        <div class="col-lg-2">
            <label asp-for="CEP" class="col-sm-2 col-form-label fw-bold">
                CEP
            </label>
            <input asp-for="CEP" type="text" class="form-control" id="CEP" />
        </div>
        <div class="col-lg-2">
            <label asp-for="UF" class="col-sm-2 col-form-label fw-bold">
                UF
            </label>
            <input asp-for="UF" type="text" class="form-control" id="UF" />
        </div>
        <div class="col-lg-3">
            <label asp-for="Cidade" class="col-sm-2 col-form-label fw-bold">
                Cidade
            </label>
            <input asp-for="Cidade" type="text" class="form-control" id="Cidade" />
        </div>
        <div class="col-lg-2">
            <label asp-for="Bairro" class="col-sm-2 col-form-label fw-bold">
                Bairro
            </label>
            <input asp-for="Bairro" type="text" class="form-control" id="Bairro" />
        </div>
        <div class="col-lg">
            <label asp-for="Rua" class="col-sm-2 col-form-label fw-bold">
                Rua
            </label>
            <input asp-for="Rua" type="text" class="form-control" id="Rua" />
        </div>
        <div class="col-lg-1">
            <label asp-for="Numero" class="col-sm-2 col-form-label fw-bold">
                Numero
            </label>
            <input asp-for="Numero" type="text" class="form-control" id="Numero" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Complemento" class="col-sm-2 col-form-label fw-bold">
                Complemento
            </label>
            <input asp-for="Complemento" type="text" class="form-control" id="Complemento" />
        </div>
    </div>
    <div class="row mt-3 justify-content-md-end">
        <div class="col-3 d-flex justify-content-end">
            <input type="submit" class="btn btn-outline-info btn-lg" name="name" value="Cadastrar" />
        </div>
    </div>
    </form>
</div>